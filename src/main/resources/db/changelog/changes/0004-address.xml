<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="0004-create-addresses-table" author="Md. Firoze Hossain">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="addresses"/>
            </not>
        </preConditions>

        <createTable tableName="addresses">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Foreign key to users -->
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <!-- Bangladesh-focused address fields -->
            <column name="address_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="full_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="phone" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="area" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="address_line" type="varchar(500)">
                <constraints nullable="false"/>
            </column>

            <column name="city" type="varchar(100)" defaultValue="Dhaka">
                <constraints nullable="false"/>
            </column>

            <column name="landmark" type="varchar(255)"/>

            <column name="is_default" type="boolean" defaultValueBoolean="false"/>

            <!-- BaseEntity fields -->
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
            <column name="created_by" type="bigint"/>
            <column name="modified_by" type="bigint"/>
            <column name="version" type="bigint" defaultValueNumeric="0"/>
            <column name="ip_address" type="varchar(45)"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>

        <!-- Create indexes for better performance -->
        <createIndex tableName="addresses" indexName="idx_addresses_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="addresses" indexName="idx_addresses_user_default">
            <column name="user_id"/>
            <column name="is_default"/>
        </createIndex>

        <createIndex tableName="addresses" indexName="idx_addresses_address_type">
            <column name="address_type"/>
        </createIndex>

        <!-- Add foreign key constraint -->
        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="user_id"
                constraintName="fk_addresses_user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="0004a-add-address-zone-fields" author="Md. Firoze Hossain">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="addresses"/>
            <not>
                <columnExists tableName="addresses" columnName="address_zone"/>
            </not>
        </preConditions>

        <addColumn tableName="addresses">
            <column name="address_zone" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="0004b-add-is-inside-dhaka-field" author="Md. Firoze Hossain">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="addresses"/>
            <not>
                <columnExists tableName="addresses" columnName="is_inside_dhaka"/>
            </not>
        </preConditions>

        <addColumn tableName="addresses">
            <column name="is_inside_dhaka" type="boolean"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>