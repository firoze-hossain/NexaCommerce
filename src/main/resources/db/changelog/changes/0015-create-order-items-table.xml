<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="0015-create-order-items-table" author="Md. Firoze Hossain">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order_items"/>
            </not>
        </preConditions>

        <createTable tableName="order_items">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Foreign keys -->
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="product_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <!-- Order item details -->
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="compare_at_price" type="decimal(10,2)"/>

            <!-- Product snapshot (for historical data) -->
            <column name="product_name" type="varchar(255)"/>
            <column name="product_sku" type="varchar(100)"/>
            <column name="product_image" type="varchar(255)"/>

            <!-- BaseEntity fields -->
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
            <column name="created_by" type="bigint"/>
            <column name="modified_by" type="bigint"/>
            <column name="version" type="bigint" defaultValueNumeric="0"/>
            <column name="ip_address" type="varchar(45)"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>

        <comment>Create order_items table for storing individual items in orders</comment>

        <!-- Create indexes for better performance -->
        <createIndex tableName="order_items" indexName="idx_order_items_order_id">
            <column name="order_id"/>
        </createIndex>

        <createIndex tableName="order_items" indexName="idx_order_items_product_id">
            <column name="product_id"/>
        </createIndex>

        <createIndex tableName="order_items" indexName="idx_order_items_order_product">
            <column name="order_id"/>
            <column name="product_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>