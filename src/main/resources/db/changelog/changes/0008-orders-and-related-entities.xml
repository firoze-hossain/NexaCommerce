<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="0008-create-orders-table" author="Md. Firoze Hossain">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orders"/>
            </not>
        </preConditions>

        <createTable tableName="orders">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Order identification -->
            <column name="order_number" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <!-- Foreign keys - customer can be null for guest orders -->
            <column name="customer_id" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="processed_by" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="vendor_id" type="bigint">
                <constraints nullable="true"/>
            </column>

            <!-- Order details -->
            <column name="source" type="varchar(20)" defaultValue="WEBSTORE">
                <constraints nullable="false"/>
            </column>

            <!-- Amount fields -->
            <column name="total_amount" type="decimal(12,2)">
                <constraints nullable="false"/>
            </column>

            <column name="shipping_amount" type="decimal(12,2)" defaultValueNumeric="0.00"/>
            <column name="tax_amount" type="decimal(12,2)" defaultValueNumeric="0.00"/>
            <column name="discount_amount" type="decimal(12,2)" defaultValueNumeric="0.00"/>

            <column name="final_amount" type="decimal(12,2)">
                <constraints nullable="false"/>
            </column>

            <!-- Guest order fields -->
            <column name="guest_email" type="varchar(255)"/>
            <column name="guest_name" type="varchar(255)"/>
            <column name="guest_phone" type="varchar(20)"/>

            <!-- Simplified Bangladesh-focused address fields -->
            <!-- Shipping Address -->
            <column name="shipping_full_name" type="varchar(255)"/>
            <column name="shipping_phone" type="varchar(20)"/>
            <column name="shipping_area" type="varchar(100)"/>
            <column name="shipping_address_line" type="varchar(500)"/>
            <column name="shipping_city" type="varchar(100)"/>
            <column name="shipping_landmark" type="varchar(255)"/>

            <!-- Billing Address -->
            <column name="billing_full_name" type="varchar(255)"/>
            <column name="billing_phone" type="varchar(20)"/>
            <column name="billing_area" type="varchar(100)"/>
            <column name="billing_address_line" type="varchar(500)"/>
            <column name="billing_city" type="varchar(100)"/>
            <column name="billing_landmark" type="varchar(255)"/>

            <!-- Status fields -->
            <column name="status" type="varchar(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>

            <column name="payment_status" type="varchar(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>

            <!-- Additional fields -->
            <column name="customer_notes" type="text"/>
            <column name="internal_notes" type="text"/>
            <column name="coupon_code" type="varchar(100)"/>
            <column name="coupon_discount" type="decimal(12,2)" defaultValueNumeric="0.00"/>

            <!-- BaseEntity fields -->
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
            <column name="created_by" type="bigint"/>
            <column name="modified_by" type="bigint"/>
            <column name="version" type="bigint" defaultValueNumeric="0"/>
            <column name="ip_address" type="varchar(45)"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>

        <comment>Create orders table for managing customer orders</comment>

        <!-- Create indexes for better performance -->
        <createIndex tableName="orders" indexName="idx_orders_order_number">
            <column name="order_number"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_customer_id">
            <column name="customer_id"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_vendor_id">
            <column name="vendor_id"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_payment_status">
            <column name="payment_status"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_created_at">
            <column name="created_at"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_source">
            <column name="source"/>
        </createIndex>

        <!-- Guest order indexes -->
        <createIndex tableName="orders" indexName="idx_orders_guest_email">
            <column name="guest_email"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_order_guest">
            <column name="order_number"/>
            <column name="guest_email"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>